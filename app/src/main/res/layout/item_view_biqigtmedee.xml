<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bigigtmedee_onlong"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <net.soulwolf.widget.ratiolayout.widget.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dip_100"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/biqigtmedee_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <com.naran.ui.view.MnTextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="1dp"
                android:padding="8dp"
                android:text="    "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white" />

            <com.naran.ui.view.MnTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:text="aaaaaaaaaa"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <com.naran.ui.view.MnTextView
                android:id="@+id/tempercher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:text="15.7C"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />
        </RelativeLayout>
    </net.soulwolf.widget.ratiolayout.widget.RatioRelativeLayout>

    <com.naran.ui.view.MnTextView
        android:id="@+id/delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/delete1"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone" />
</RelativeLayout>