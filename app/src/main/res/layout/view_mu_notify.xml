                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/imageView_notify_5_chinese"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:padding="@dimen/dip_2"
                            android:layout_width="0dip"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imageView_notify_6_chinese"
                            android:layout_width="0dip"
                            android:scaleType="fitXY"
                            android:padding="@dimen/dip_2"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/disaster"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:src="@drawable/camera" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rela_notify2"
                android:background="#66ffffff">

                <LinearLayout
                    android:id="@+id/rela_notify4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:background="@drawable/noify_table_back"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <EditText
                            android:id="@+id/imageView_notify_position"
                            android:layout_width="wrap_content"
                            android:background="@null"
                            android:padding="@dimen/dip_5"
                            android:textSize="@dimen/fond_12sp"
                            android:layout_height="match_parent" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView_notify_position"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <com.naran.ui.view.MnTextView
                                android:layout_width="wrap_content"
