<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/meng_WeatherAssistant"
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_180"
                android:layout_marginRight="@dimen/dip0_1"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dip_40"
                    android:layout_height="@dimen/dip_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/question" />

                <com.naran.ui.view.MnTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dip_10"
                    android:layout_gravity="center_horizontal"
                    android:text=" \n \n\n "
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meng_AboutWeather"
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_180"
                android:layout_marginRight="@dimen/dip0_1"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dip_40"
                    android:layout_height="@dimen/dip_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/warning" />

                <com.naran.ui.view.MnTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dip_10"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dip_10"
                    android:text=" \n \n  \n "
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meng_HistoricalWeather"
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_180"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dip_40"
                    android:layout_height="@dimen/dip_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/cloud" />

                <com.naran.ui.view.MnTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dip_10"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dip_10"
                    android:text="  \n \n   \n  "
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/meng_SocialConcern"
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_180"
                android:layout_marginTop="@dimen/dip0_1"
                android:layout_marginBottom="0.1dp"
                android:layout_marginRight="@dimen/dip0_1"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="@dimen/dip_40"
                    android:layout_height="@dimen/dip_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/group" />

                <com.naran.ui.view.MnTextView
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="  " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meng_LivestockConcern"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dip0_1"
                android:layout_marginBottom="0.1dp"
                android:layout_marginRight="@dimen/dip0_1"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="@dimen/dip_40"
                    android:layout_height="@dimen/dip_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/beef" />
                               //  
                <com.naran.ui.view.MnTextView
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"

                    android:text="    " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meng_Winwincooperation"
                android:layout_width="0dip"
                android:layout_height="@dimen/dip_180"
                android:layout_marginBottom="0.1dp"
                android:layout_marginTop="@dimen/dip0_1"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="@dimen/dip_40"
                    android:layout_height="@dimen/dip_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/house" />

                <com.naran.ui.view.MnTextView
                    android:layout_marginTop="@dimen/dip_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="  " />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>