<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="#005b90" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/dip_40" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">

        <!-- 填充的颜色 -->
        <solid android:color="#063551" />
        <!-- 设置按钮的四个角为弧形 -->
        <!-- android:radius 弧形的半径 -->
        <corners android:radius="@dimen/dip_40" />
        <!-- padding：Button里面的文字与Button边界的间隔 -->
        <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
    </shape></item>
</selector>